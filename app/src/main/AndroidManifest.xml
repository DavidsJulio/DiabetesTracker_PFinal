<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.davidjulio.pfinal2020">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.ui.medicoes.AdicionarMedicaoActivity" android:label="Adicionar Medição"></activity>
        <!-- <activity android:name=".notification.Lixo"></activity> -->
        <activity android:name=".activity.ui.lembretes.AdicionarLembreteActivity" />
        <activity
            android:name=".activity.ui.refeicoes.AdicionarRefeicaoActivity"
            android:label="Adicionar Refeição"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.LoadingActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TelaPrincipalActivity"
            android:label="@string/title_activity_tela_principal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.RegistoActivity" />
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/Theme.Intro" />
    </application>

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.CAMERA" />

</manifest>